<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Allow all app data to be backed up to the cloud -->
        <include domain="root" />
        <include domain="file" />
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="device_preferences" />
        <exclude domain="database" path="monitoring.db" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow all app data to be transferred to a new device -->
        <include domain="root" />
        <include domain="file" />
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="device_preferences" />
        <exclude domain="database" path="monitoring.db" />
    </device-transfer>
</data-extraction-rules>
